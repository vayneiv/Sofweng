<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
     android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".chooseSignUP"
    android:background="@drawable/choose_acct_type">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button3"
        android:clickable="true"
        android:contentDescription="@string/welcome_customer"
        android:src="@drawable/customer_bt"
        android:maxHeight="120dp"
        android:maxWidth="120dp"
        android:minHeight="120dp"
        android:minWidth="120dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:background="@null"
        android:layout_gravity="center_horizontal"
        android:layout_above="@+id/textView63"
        android:layout_toLeftOf="@+id/textView63"
        android:layout_toStartOf="@+id/textView63"
        android:layout_marginBottom="150dp"
        android:layout_marginRight="-10dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button4"
        android:clickable="true"
        android:contentDescription="@string/welcome_Restaurant"
        android:src="@drawable/resto_owner_bt"
        android:maxHeight="120dp"
        android:maxWidth="120dp"
        android:minHeight="120dp"
        android:minWidth="120dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:background="@null"
        android:layout_gravity="center_horizontal"
        android:layout_above="@+id/textView63"
        android:layout_toRightOf="@+id/textView63"
        android:layout_toEndOf="@+id/textView63"
        android:layout_marginBottom="150dp"
        android:layout_marginLeft="-10dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView4"
        android:src="@drawable/name_logo_transparentbg"
        android:maxHeight="100dp"
        android:minWidth="100dp"
        android:adjustViewBounds="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="41dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/title_activity_choose_sign_up"
        android:id="@+id/textView12"
        android:textColor="#ffffff"
        android:singleLine="true"
        android:typeface="sans"
        android:hint="@string/username_text"
        android:layout_below="@+id/textView59"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SIGNUP"
        android:id="@+id/textView59"
        android:layout_below="@+id/imageView4"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff"
        android:textSize="@dimen/abc_text_size_large_material"
        android:layout_marginTop="70dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/textView63"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:visibility="invisible" />

</RelativeLayout>
