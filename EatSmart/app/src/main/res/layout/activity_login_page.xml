<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".loginPage"
    android:background="@drawable/signin_bg">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextConfirmPassword"
        android:width="300dp"
        android:maxWidth="300dp"
        android:singleLine="true"
        android:password="false"
        android:inputType="text"
        android:minWidth="300dp"
        android:hint="@string/username_text"
        android:background="#ffffff"
        android:minHeight="40dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText2"
        android:width="300dp"
        android:password="true"
        android:phoneNumber="false"
        android:maxWidth="300dp"
        android:singleLine="true"
        android:inputType="text|textPassword"
        android:minWidth="300dp"
        android:hint="@string/password_text"
        android:background="#ffffff"
        android:layout_marginTop="32dp"
        android:minHeight="40dp"
        android:layout_below="@+id/editTextConfirmPassword"
        android:layout_centerHorizontal="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_login"
        android:id="@+id/button"
        android:onClick="logIn"
        android:layout_marginTop="33dp"
        android:layout_below="@+id/editText2"
        android:layout_centerHorizontal="true"
        android:minWidth="150dp"
        android:textColor="#ff090b"
        android:background="#ffffff" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_sign_up"
        android:id="@+id/button2"
        android:onClick="signUp"
        android:layout_below="@+id/button"
        android:layout_centerHorizontal="true"
        android:minWidth="150dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/name_logo_transparentbg"
        android:layout_above="@+id/editTextConfirmPassword"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="debug"
        android:id="@+id/button5"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/editText2"
        android:layout_alignStart="@+id/editText2"
        android:onClick="debug" />

</RelativeLayout>
