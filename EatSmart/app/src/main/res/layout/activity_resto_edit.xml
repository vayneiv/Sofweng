<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.jerem.eatsmart.resto_edit"
    android:background="#da0101">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton7"
        android:src="@drawable/signup_bt"
        android:background="#00ffffff"
        android:maxHeight="120dp"
        android:maxWidth="120dp"
        android:minHeight="120dp"
        android:minWidth="120dp"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/button12"
        android:layout_alignEnd="@+id/button12" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/imageView9"
        android:foreground="#00ffffff"
        android:scaleType="fitXY"
        android:background="#ffffff"
        android:src="@drawable/signin_bg"
        android:nestedScrollingEnabled="false"
        android:longClickable="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Image"
        android:id="@+id/button12"
        android:layout_below="@+id/imageView9"
        android:layout_centerHorizontal="true" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView3"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/button12"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/imageButton7">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description"
                android:id="@+id/textView22"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/editText3"
                android:layout_above="@+id/textView3"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Category"
                android:id="@+id/textView30"
                android:layout_alignParentBottom="true"
                android:layout_above="@+id/editText7"
                android:layout_alignRight="@+id/textView3"
                android:layout_alignEnd="@+id/textView3"
                android:layout_gravity="center_horizontal" />

            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:columnCount="3"
                android:rowCount="3"
                android:id="@+id/gridLayout"
                android:layout_above="@+id/editText16"
                android:layout_alignTop="@+id/textView22"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal" >

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cafe"
                    android:id="@+id/radioButton7"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:allowUndo="true"
                    android:enabled="true"
                    android:clickable="true"
                    android:onClick="radio1toggle" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dessert"
                    android:id="@+id/radioButton8"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:allowUndo="true"
                    android:enabled="true"
                    android:clickable="true"
                    android:onClick="radio2toggle" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/bar"
                    android:id="@+id/radioButton9"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:allowUndo="true"
                    android:enabled="true"
                    android:clickable="true"
                    android:onClick="radio3toggle" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Grill"
                    android:id="@+id/radioButton10"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:textColor="#ffffff"
                    android:elegantTextHeight="false"
                    android:enabled="true"
                    android:allowUndo="true"
                    android:clickable="true"
                    android:onClick="radio4toggle" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fine Dining"
                    android:id="@+id/radioButton11"
                    android:layout_row="1"
                    android:layout_column="2"
                    android:allowUndo="true"
                    android:enabled="true"
                    android:clickable="true"
                    android:onClick="radio5toggle" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Veg"
                    android:id="@+id/radioButton12"
                    android:layout_row="2"
                    android:layout_column="0"
                    android:allowUndo="true"
                    android:enabled="true"
                    android:clickable="true"
                    android:onClick="radio6toggle" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Buffet"
                    android:id="@+id/radioButton20"
                    android:layout_row="2"
                    android:layout_column="1"
                    android:allowUndo="true"
                    android:enabled="true"
                    android:clickable="true"
                    android:onClick="radio7toggle" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lutong Bahay"
                    android:id="@+id/radioButton21"
                    android:layout_row="0"
                    android:layout_column="2"
                    android:allowUndo="true"
                    android:clickable="true"
                    android:enabled="true"
                    android:onClick="radio9toggle" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fast Food"
                    android:id="@+id/radioButton22"
                    android:layout_row="2"
                    android:layout_column="2"
                    android:allowUndo="true"
                    android:enabled="true"
                    android:clickable="true"
                    android:onClick="radio8toggle" />
            </GridLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Budget"
                android:id="@+id/textView31"
                android:layout_above="@+id/gridLayout"
                android:layout_alignTop="@+id/imageButton2"
                android:layout_alignLeft="@+id/imageButton2"
                android:layout_alignStart="@+id/imageButton2"
                android:layout_gravity="center_horizontal" />

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radioGroup2"
                android:layout_above="@+id/textView31"
                android:layout_alignTop="@+id/imageButton2"
                android:layout_alignLeft="@+id/imageButton2"
                android:layout_alignStart="@+id/imageButton2"
                android:layout_marginTop="0dp"
                android:layout_gravity="center_horizontal"
                android:clickable="true" >

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:columnCount="2"
                    android:rowCount="2" >

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="P0-P100"
                        android:id="@+id/radioButton29"
                        android:layout_row="0"
                        android:layout_column="0"
                        android:allowUndo="true" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="P101-P500"
                        android:id="@+id/radioButton30"
                        android:layout_row="0"
                        android:layout_column="1"
                        android:allowUndo="true" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="P501-P1000"
                        android:id="@+id/radioButton31"
                        android:layout_row="1"
                        android:layout_column="0"
                        android:allowUndo="true" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="P1000 above"
                        android:id="@+id/radioButton32"
                        android:layout_row="1"
                        android:layout_column="1"
                        android:allowUndo="true" />
                </GridLayout>
            </RadioGroup>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location"
                android:id="@+id/textView32"
                android:layout_centerVertical="true"
                android:layout_alignLeft="@+id/textView13"
                android:layout_alignStart="@+id/textView13"
                android:layout_gravity="center_horizontal" />

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/radioGroup4"
                android:layout_alignParentBottom="true"
                android:layout_alignRight="@+id/imageView5"
                android:layout_alignEnd="@+id/imageView5"
                android:layout_gravity="center_horizontal" >

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:columnCount="4"
                    android:rowCount="3" >

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Manila"
                        android:id="@+id/radioButton33"
                        android:layout_row="0"
                        android:layout_column="1"
                        android:allowUndo="true" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pasig"
                        android:id="@+id/radioButton34"
                        android:layout_row="0"
                        android:layout_column="2"
                        android:allowUndo="true" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Makati"
                        android:id="@+id/radioButton35"
                        android:layout_row="0"
                        android:layout_column="3"
                        android:allowUndo="true" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="San Juan"
                        android:id="@+id/radioButton36"
                        android:layout_row="1"
                        android:layout_column="1"
                        android:allowUndo="true" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pasay"
                        android:id="@+id/radioButton37"
                        android:layout_row="1"
                        android:layout_column="2"
                        android:allowUndo="true" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Taguig"
                        android:id="@+id/radioButton38"
                        android:layout_row="1"
                        android:layout_column="3"
                        android:allowUndo="true" />
                </GridLayout>
            </RadioGroup>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
