<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_details_restaurant"
    tools:context="com.example.jerem.eatsmart.details_restaurant"
    android:background="#ff0000">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton2"
        android:src="@drawable/signup_bt"
        android:background="#00ffffff"
        android:maxHeight="120dp"
        android:maxWidth="120dp"
        android:minHeight="120dp"
        android:minWidth="120dp"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:layout_marginBottom="42dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/button6"
        android:layout_alignStart="@+id/button6" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/imageView5"
        android:foreground="#00ffffff"
        android:scaleType="fitXY"
        android:background="#ffffff"
        android:src="@drawable/signin_bg"
        android:nestedScrollingEnabled="false"
        android:longClickable="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Image"
        android:id="@+id/button6"
        android:layout_below="@+id/imageView5"
        android:layout_centerHorizontal="true" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView2"
        android:layout_below="@+id/button6"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/imageButton2">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description"
                android:id="@+id/textView16"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:textColor="#ffffff" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/editText6"
                android:layout_above="@+id/textView3"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:textColor="#ffffff" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Category"
                android:id="@+id/textView19"
                android:layout_alignParentBottom="true"
                android:layout_above="@+id/editText7"
                android:layout_alignRight="@+id/textView3"
                android:layout_alignEnd="@+id/textView3"
                android:layout_gravity="center_horizontal"
                android:textColor="#ffffff" />

            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:columnCount="3"
                android:rowCount="3"
                android:id="@+id/gridLayout2"
                android:layout_above="@+id/editText16"
                android:layout_alignTop="@+id/textView16"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal">

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cafe"
                    android:id="@+id/radioButton5"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:allowUndo="true"
                    android:enabled="true"
                    android:clickable="true"
                    android:textColor="#ffffff" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dessert"
                    android:id="@+id/radioButton6"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:allowUndo="true"
                    android:enabled="true"
                    android:clickable="true"
                    android:textColor="#ffffff" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/bar"
                    android:id="@+id/radioButton16"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:allowUndo="true"
                    android:enabled="true"
                    android:clickable="true"
                    android:textColor="#ffffff" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Grill"
                    android:id="@+id/radioButton23"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:textColor="#ffffff"
                    android:elegantTextHeight="false"
                    android:enabled="true"
                    android:allowUndo="true"
                    android:clickable="true" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fine Dining"
                    android:id="@+id/radioButton24"
                    android:layout_row="1"
                    android:layout_column="2"
                    android:allowUndo="true"
                    android:enabled="true"
                    android:clickable="true"
                    android:textColor="#ffffff" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Veg"
                    android:id="@+id/radioButton25"
                    android:layout_row="2"
                    android:layout_column="0"
                    android:allowUndo="true"
                    android:enabled="true"
                    android:clickable="true"
                    android:textColor="#ffffff" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Buffet"
                    android:id="@+id/radioButton26"
                    android:layout_row="2"
                    android:layout_column="1"
                    android:allowUndo="true"
                    android:enabled="true"
                    android:clickable="true"
                    android:textColor="#ffffff" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lutong Bahay"
                    android:id="@+id/radioButton27"
                    android:layout_row="0"
                    android:layout_column="2"
                    android:allowUndo="true"
                    android:clickable="true"
                    android:enabled="true"
                    android:textColor="#ffffff" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fast Food"
                    android:id="@+id/radioButton28"
                    android:layout_row="2"
                    android:layout_column="2"
                    android:allowUndo="true"
                    android:enabled="true"
                    android:clickable="true"
                    android:textColor="#ffffff" />
            </GridLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Budget"
                android:id="@+id/textView20"
                android:layout_above="@+id/gridLayout2"
                android:layout_alignTop="@+id/imageButton2"
                android:layout_alignLeft="@+id/imageButton2"
                android:layout_alignStart="@+id/imageButton2"
                android:layout_gravity="center_horizontal" />

            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal">

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="P501-P1000"
                    android:id="@+id/checkBox10"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:allowUndo="true"
                    android:textColor="#ffffff" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="P101-P500"
                    android:id="@+id/checkBox11"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:allowUndo="true"
                    android:textColor="#ffffff" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="P0-P100"
                    android:id="@+id/checkBox12"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:allowUndo="true"
                    android:textColor="#ffffff" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="P1000 above"
                    android:id="@+id/checkBox13"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:allowUndo="true"
                    android:textColor="#ffffff" />
            </GridLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location"
                android:id="@+id/textView21"
                android:layout_centerVertical="true"
                android:layout_alignLeft="@+id/textView13"
                android:layout_alignStart="@+id/textView13"
                android:layout_gravity="center_horizontal" />

            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:columnCount="4"
                android:rowCount="3" >

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Manila"
                    android:id="@+id/radioButton13"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:allowUndo="true"
                    android:textColor="#ffffff" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pasig"
                    android:id="@+id/radioButton14"
                    android:layout_row="0"
                    android:layout_column="2"
                    android:allowUndo="true"
                    android:textColor="#ffffff" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Makati"
                    android:id="@+id/radioButton15"
                    android:layout_row="0"
                    android:layout_column="3"
                    android:allowUndo="true"
                    android:textColor="#ffffff" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="San Juan"
                    android:id="@+id/radioButton17"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:allowUndo="true"
                    android:textColor="#ffffff" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pasay"
                    android:id="@+id/radioButton49"
                    android:layout_row="1"
                    android:layout_column="2"
                    android:allowUndo="true"
                    android:textColor="#ffffff" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Taguig"
                    android:id="@+id/radioButton50"
                    android:layout_row="1"
                    android:layout_column="3"
                    android:allowUndo="true"
                    android:textColor="#ffffff" />
            </GridLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
